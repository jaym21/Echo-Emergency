<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Helplines.MedicalHelplines"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:id="@+id/medical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMedicalHelpline1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#a8e063"
        app:cardCornerRadius="20dp"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambulance Helpline : 102"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMedicalHelpline2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#a8e063"
        app:cardCornerRadius="20dp"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air Ambulance : 9540161344"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMedicalHelpline3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#a8e063"
        app:cardCornerRadius="20dp"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aids Helpline : 1097"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMedicalHelpline4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#a8e063"
        app:cardCornerRadius="20dp"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anti Poison(New Delhi) : 1066"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>